{
    "name": "lumia",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev:all": "concurrently \"bun run dev:webhook\" \"bun run dev\"",
        "dev:prod": "bun run build && concurrently \"bun run dev:webhook\" \"bun run start\"",
        "dev": "next dev --turbopack",
        "dev:webhook": "bun --env-file=.env.local run dev:ngrok",
        "dev:ngrok": "ngrok http --url=$NGROK_URL 3000",
        "dev:seed-categories": "NODE_ENV=development bun src/scripts/add-video-categories.ts",
        "dev:db": "NODE_ENV=development bunx drizzle-kit check && bunx drizzle-kit generate && bunx drizzle-kit push",
        "build": "next build",
        "start": "next start",
        "lint": "next lint"
    },
